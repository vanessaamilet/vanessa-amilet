	.container
		.row
			.col-lg-12
				h6 TYPOGRAPHY
		.row
			.col-md-6
				= image_tag "typography/helvetica-type.svg", :class=>"img-responsive center-block", :alt=>"Helvetica"

section.showcase.tch
	.container
		.row
			.col-lg-12
				= image_tag "portfolio-showcases/ecmg-showcase.png", :class=>"img-fluid center-img", :alt=>"TCH Showcase"
