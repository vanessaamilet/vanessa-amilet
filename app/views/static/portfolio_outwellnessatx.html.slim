					= link_to image_path("portfolio/outwellness-atx/outwellness-atx-homepage.jpg"), "data-fancybox"=>"gallery", "data-caption"=>"OutWellness ATX Homepage" do
						= image_tag "portfolio/outwellness-atx/outwellness-atx-homepage.jpg", :class=>"img-fluid w-100 h-auto", :alt=>"OutWellness ATX Homepage"
					= link_to image_path("portfolio/outwellness-atx/outwellness-atx-about.jpg"), "data-fancybox"=>"gallery", "data-caption"=>"OutWellness ATX About Page" do
