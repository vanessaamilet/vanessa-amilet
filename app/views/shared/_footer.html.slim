#footer
	.footer-wrapper
		.container
			.row
				.col-md-4.col-sm-12
					h4 About
					p Vanessa Amilet blends UX, design, and development to create digital experiences that are intuitive, impactful, and authentically aligned with your brand.
					p
						= link_to "Learn More »", about_path
				.col-md-2.col-sm-2
					.fu-logo
						= link_to "https://www.freelancersunion.org?utm_source=badge&utm_campaign=member&utm_content=member-stamp-200", target:"_blank"  do
							= image_tag "https://assets.freelancersunion.org/static/images/member-badge.ec82f86413ea.svg", alt: 'Proud member of Freelancers Union', :height=>"100", :width=>"100"
				.col-md-3.col-sm-6
					h4 Menu
					nav.footer-nav
						ul
							li
								= link_to "Schedule a Consultation", "https://calendly.com/vanessa-amilet"
							li
								= link_to "Projects", portfolio_path
							li
								= link_to "Services", services_path
							li
								= link_to "Contact", contact_path
							li
								= link_to "FAQs", faqs_path

				.col-md-3.col-sm-6
					h4 Connect
					ul.social
						li.linkedin
							= link_to "https://www.linkedin.com/in/vanessaamilet", target:"_blank" do 
								i.fa-brands.fa-linkedin-in
						li.github
							= link_to "https://github.com/vanessaamilet", target:"_blank" do
								i.fa-brands.fa-github
						li.dribbble
							= link_to "https://dribbble.com/vanessaamilet", target:"_blank" do
								i.fa-brands.fa-dribbble
						li.instagram
							= link_to "https://www.instagram.com/vanessaamilet/", target:"_blank" do
								i.fa-brands.fa-instagram

	.sub-footer.d-flex.align-items-center
		.container
			.row
				.col-lg-4
					p.credit.text-left
						| &copy;&nbsp;
						= Time.zone.now.year
						= link_to " Vanessa Amilet", root_path
				.col-lg-4
					p.credit.text-lg-center
						| Made with <i class="fa fa-heart"></i> in ATL.
				.col-lg-4
					p.credit.text-lg-right
						= link_to "Privacy Policy", privacy_policy_path
						|  • 
						= link_to "Terms of Service", terms_path
